<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Snowtricks{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/logo/logo2.jpg') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1" />
{#        <script src="{{ asset('js/bouton.js') }}"></script>
        <script src="{{ asset('js/trick.js') }}"></script>#}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
{#        <script src="{{ asset('js/bouton.js') }}"></script>
        <script src="{{ asset('js/trick.js') }}"></script>#}
    </head>
    <body class="d-flex flex-column min-vh-100">
    <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
            <div class="col-md-3 mb-2 mb-md-0">
                <a href="{{ path('home') }}" class="d-inline-flex link-body-emphasis text-decoration-none animate__animated animate__fadeInLeft">
                    <img src="{{ asset('assets/logo/logo2.jpg') }}" alt="logo" style="width: 5rem;">
                </a>
            </div>

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                {% if app.user %}
                <li><a href="{{ path('home') }}" class="nav-link px-2 link-secondary">Accueil</a></li>
                <li><a href="{{ path('tricks') }}" class="nav-link px-2">Tricks</a></li>
                <li><a href="{{ path('contact') }}" class="nav-link px-2">Contact</a></li>
                <li><a href="{{ path('about') }}" class="nav-link px-2">A propos de</a></li>
                {% else %}
                    <li><a href="{{ path('home') }}" class="nav-link px-2 link-secondary">Accueil</a></li>
                    <li><a href="{{ path('tricks') }}" class="nav-link px-2">Tricks</a></li>
                    <li><a href="{{ path('contact') }}" class="nav-link px-2">Contact</a></li>
                    <li><a href="{{ path('about') }}" class="nav-link px-2">A propos de</a></li>
                {% endif %}
            </ul>
            <div class="col-md-3 text-end">
                {% if app.user %}
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ app.user.firstname }} {{ app.user.lastname }}
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('account') }}">Profil</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a class="dropdown-item" href="{{ path('admin') }}">BackOffice</a></li>
                            {% endif %}
                            <li><a class="dropdown-item" href="{{ path('logout') }}">Deconexion</a></li>
                        </ul>
                    </div>
                {% else %}
                <a type="button" class="btn btn-outline-primary me-2" href="{{ path('login') }}">Connexion</a>
                <a type="button" class="btn btn-primary" href="{{ path('register') }}">S'inscrire</a>
                {% endif %}
            </div>
        </header>
    </div>
        {% block main %}{% endblock %}
    <div class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Home</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Features</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Pricing</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">FAQs</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">About</a></li>
            </ul>
            <p class="text-center text-body-secondary">© 2024 Company, Inc</p>
        </footer>
    </div>
    <button id="scrollToTopBtn" class="btn btn-dark">↑</button>
    <script src="{{ asset('js/bouton.js') }}"></script>
    <script src="{{ asset('js/trick.js') }}"></script>
    <script src="{{ asset('js/comment.js') }}"></script>
    </body>
</html>
