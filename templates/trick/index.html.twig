{% extends 'base.html.twig' %}

{% block title %}Hello TrickController!{% endblock %}

{% block main %}
    <main>
        <div class="album py-5 bg-body-tertiary">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    {% for trick in tricks %}
                        <div class="col">
                            <div class="card shadow-sm">
                                {% if trick.images|length > 0 %}
                                    {% set image = trick.images[0] %}
                                    <img src="{{ asset(image.path) }}" class="card-img-top" alt="{{ image.caption }}">
                                {% else %}
                                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                                {% endif %}
                                <div class="card-body">
                                    <h5 class="card-title">{{ trick.title }}</h5>
                                    <p class="card-text">{{ trick.content }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('show', {'slug': trick.slug}) }}">Voir</a>
                                        </div>
                                        <small class="text-body-secondary">9 mins</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
